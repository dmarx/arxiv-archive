{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node", 
      "@playwright/test",
      "chrome"
    ]
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
