// manifest.json
{
  "manifest_version": 3,
  "name": "ArXiv Paper Tracker",
  "version": "1.0",
  "description": "Track and rate arXiv papers you read",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://arxiv.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
